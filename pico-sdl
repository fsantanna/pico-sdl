#!/bin/sh

# /x/y/pico-sdl /a/b/c/d.c

PICO=$(dirname $(realpath "$0"))    # /x/y/

DIR=$(dirname -- "$1")              # /a/b/c/
EXE=$(basename -- "$1")             # d.c
EXE="${EXE%.*}.exe"                 # d.exe

# Default to PICO_CHECK_INT if not set
CHECK_MODE=${PICO_CHECK_MODE:-INT}

#echo $PICO, $DIR, $EXE

gcc -Wall -g -o "$DIR/$EXE" "$1"          \
    "$PICO/src/pico.c" "$PICO/src/hash.c" \
    -I "$PICO/src"                        \
    -DPICO_CHECK_$CHECK_MODE              \
    -lSDL2 -lSDL2_ttf -lSDL2_image -lSDL2_mixer -lSDL2_gfx

if [ $? -eq 0 ]; then
    cd $DIR/
    "./$EXE"
fi
