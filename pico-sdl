#!/bin/sh

PICO=$(dirname -- "$0")     # path of pico-sdl root

DIR=$(dirname -- "$1")      # path of source file
EXE=$(basename -- "$1")
EXE="${EXE%.*}"

gcc -Wall -o "$DIR/$EXE" "$1"                               \
    "$PICO/src/pico.c" "$PICO/src/dir.c" "$PICO/src/hash.c" \
    -I "$PICO/src"                                          \
    -lSDL2 -lSDL2_ttf -lSDL2_image -lSDL2_mixer -lSDL2_gfx

"$DIR/$EXE"
